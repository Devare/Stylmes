<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            style="@style/ViewsTheme.ThemeButton"
            android:text="Registrarse" />

        <LinearLayout style="@style/ViewsTheme.LinearFormulario">

            <ImageView
                style="@style/IvTheme.Iv_fieldsFormulario"
                android:contentDescription="Descripcion de la imagen"
                app:srcCompat="@drawable/ic_usuario" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/User"
                style="@style/ViewsTheme.TilFormulario">

                <EditText
                    android:id="@+id/username"
                    style="@style/ViewsTheme.EtFormulario"
                    android:hint="Usuario"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout style="@style/ViewsTheme.LinearFormulario">

            <ImageView
                style="@style/IvTheme.Iv_fieldsFormulario"
                android:contentDescription="Descripcion de la imagen"
                app:srcCompat="@drawable/ic_password" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_login_password"
                style="@style/ViewsTheme.TilFormulario"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimary">

                <EditText
                    android:id="@+id/et_login_password"
                    style="@style/ViewsTheme.EtFormulario"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:maxLength="8" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
           style="@style/ViewsTheme"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                style="@style/IvTheme.RedesSocialesFormulario"
                android:contentDescription="Descripcion de la imagen"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                style="@style/IvTheme.RedesSocialesFormulario"
                android:contentDescription="Descripcion de la imagen"
                app:srcCompat="@drawable/ic_google_plus" />

            <ImageView
                style="@style/IvTheme.RedesSocialesFormulario"
                android:contentDescription="Descripcion de la imagen"
                app:srcCompat="@drawable/ic_twitter" />

        </LinearLayout>

        <Button
            style="@style/ViewsTheme.ThemeButton"
            android:layout_marginTop="20dp"
            android:text="Iniciar sesión" />

        <TextView
            style="@style/ViewsTheme"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="¿Olvidaste tu contraseña? "
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>